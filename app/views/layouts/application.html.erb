<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Latable" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Latable" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <%= render 'layouts/navigation' %>
      <!-- Example row of columns -->
      <div class="jumbotron">
        <div class="col-lg-2 well">
          test
        </div>
        <div class="col-lg-10">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
      </div>

      <hr>

      <footer>
        <p>&copy; Company 2013</p>
      </footer>
    <div id="main" role="main" class="jumbotron">
      <div class="container">

      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
